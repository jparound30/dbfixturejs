    "outDir": "dist",
    "moduleResolution": "node",
    "rootDirs": ["./src"],
    "baseUrl": "./src",
    "declaration": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
